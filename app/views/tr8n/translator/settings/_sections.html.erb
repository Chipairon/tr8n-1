<div class="section-header" >
  <%=tra("Translator Preferences")%>
</div>

<ul class="nav nav-tabs" style="padding-left:10px;padding-right:10px;">
  <% [
         [nil, "Basics", "index", true],
         [nil, "Languages", "languages", true],
         [nil, "Features", "features", true],
     ].each do |tab| %>

    <li class="<%='active' if controller.action_name == tab[2] %>">
      <%=link_to("/tr8n/translator/settings/#{tab[2]}") do %>
        <i class='<%=tab[0]%>'></i>
        <%= tra(tab[1]) %>
      <% end %>
    </li>
  <% end %>
</ul>
