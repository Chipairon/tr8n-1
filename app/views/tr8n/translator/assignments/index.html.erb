<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

  <%= render :partial => "/tr8n/common/header" %>

  <div class="section-header">
    <%=tra("Assignments") %>
  </div>

  <div class="tr8n tr8n_container" <%=tr8n_dir_attribute_tag%> >
    <div class="section blue">
      <% if @components.any? %>
        <%= tra("You have [bold: {count||assignment}]: {assignments}.", :count => @components.size, :assignments => @components.collect{|comp| link_to(comp.title, :anchor => "comp-#{comp.id}")}.join(", ")) %>
      <% else %>
        <%= tra("You currently don't have any assignments.") %>
      <% end %>
    </div>
  </div>

  <%= render :partial => "/tr8n/common/footer" %>

<% end %>
