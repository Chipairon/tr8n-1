<!-- Modal -->
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">
        <% if @case_rule.id %>
          <%=tra("Update Language Case Rule")%>
        <% else %>
          <%=tra("Add Language Case Rule")%>
        <% end %>
      </h4>
    </div>

    <div class="modal-body">
      <%= form_for(@case_rule, :as => :case_rule, :url => {:id => @lcase.id, :rule_id => @case_rule.id, :position => @position}, :html => {:method => :post, :role => "form", :class => "form-inline", :id => "context_form"}) do |f| %>
        <div class="form-group">
          <label for="case_rule[description]"><%=tra("Description")%></label>
          <%=f.text_area(:description, :placeholder => "Optional. Enter description.", :class => "form-control input-block-level", :style => "height:50px;") %>
        </div>
        <div class="form-group">
          <label for="case_rule[conditions]"><%=tra("Conditions")%></label>
          <%= text_area_tag("case_rule[conditions]", @case_rule.definition["conditions"], :placeholder => "Required. Enter symbolic notation for matching the token value.", :class => "form-control input-block-level", :style=>"height:100px;") %>
        </div>
        <div class="form-group">
          <label for="case_rule[operations]"><%=tra("Operations")%></label>
          <%= text_area_tag("case_rule[operations]", @case_rule.definition["operations"], :placeholder => "Required. Enter symbolic notation for operations to be performed on the token value.", :class => "form-control input-block-level", :style=>"height:100px;") %>
        </div>
        <div class="form-group">
          <label for="case_rule[examples]"><%=tra("Examples")%></label>
          <%= f.text_area(:examples, :placeholder => "Optional. Provide some examples for translators.", :class => "form-control input-block-level", :style=>"height:100px;") %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%=tra("Cancel") %></button>
      <button type="submit" class="btn btn-primary" onClick="$('#context_form').submit();"><%=tra("Submit") %></button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
