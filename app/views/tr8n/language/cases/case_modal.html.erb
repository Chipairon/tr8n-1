<!-- Modal -->
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">
        <% if @lcase.id %>
          <%=tra("Update Language Case")%>
        <% else %>
          <%=tra("Add Language Case")%>
        <% end %>
      </h4>
    </div>

    <%= form_for(@lcase, :as => :lcase, :url => {:id => params[:id]}, :html => {:method => :post, :role => "form", :class => "form-inline", :id => "lcase_form", :style=>"margin:0px;"}) do |f| %>
    <div class="modal-body">
        <div class="form-group">
          <label for="lcase[keyword]"><%=tra("Keyword")%></label>
          <%=f.text_field(:keyword, :placeholder => "Required. Enter language case keyword.", :class => "form-control input-block-level") %>
        </div>
        <div class="form-group">
          <label for="lcase[native_name]"><%=tra("Name")%></label>
          <%= f.text_field(:native_name, :placeholder => "Required. Enter language case name.", :class => "form-control input-block-level") %>
        </div>
        <div class="form-group">
          <label for="lcase[latin_name]"><%=tra("Latin Name")%></label>
          <%= f.text_field(:latin_name, :placeholder => "Optional. Enter language case name in Latin.", :class => "form-control input-block-level") %>
        </div>
        <div class="form-group">
          <label for="lcase[appliation]"><%=tra("Application")%></label>
          <%= select_tag("lcase[application]", options_for_select([["Applies to every word of the token", "word"], ["Applies to the entire phrase","phrase"]], @lcase.application), :class => "form-control input-block-level") %>
        </div>
        <div class="form-group">
          <label for="lcase[description]"><%=tra("Description")%></label>
          <%=f.text_area(:description, :placeholder => "Optional. Enter description", :class => "form-control input-block-level", :style => "height:100px;") %>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%=tra("Cancel") %></button>
      <button type="submit" class="btn btn-primary"><%=tra("Submit") %></button>
    </div>
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
