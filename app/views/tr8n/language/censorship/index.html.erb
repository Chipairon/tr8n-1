<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

  <%= render :partial => "/tr8n/language/common/header" %>

  <div class="tr8n tr8n_container" <%=tr8n_dir_attribute_tag%>>
    <div class="section grey">
      <div class="tr8n_float_right" style="padding-right:5px;">
        <%=tr8n_help_icon_tag("Language Prohibited Words") %>
      </div>

      <%= tra("Enter a list of comma-delimited words that will not be allowed in translations of this language.") %>
      <%= tra("If this language has a fallback language in which some of the words are prohibited while in this language are allowed, you can enable those words by adding a '-' in front of the word.") %>
    </div>

    <%= form_for(tr8n_current_language, :as => :language, :url => {}, :html => {:id => 'prohibited_words_form', :method => :post}) do |f| %>
      <div id="prohibited_words_content" class="section grey">
        <%=f.text_area(:curse_words, :style => "width:99%; height:200px; background:white;")%>

        <div style="float:right;">
          <button type="submit" class="btn btn-primary">
            <%=tra("Update")%>
          </button>
        </div>

        <div class="tr8n_text_align_left"  style="color:grey; font-size:12px; padding-top:10px;"><%=tra("Add any prohibited/curse words that should not be allowed in translations for this settings. Separate words with commas.")%></div>

      </div>
    <% end %>

  </div>

  <%= render :partial => "/tr8n/common/footer" %>

<% end %>
