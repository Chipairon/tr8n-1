<%
   color = "#f1f4f9" # selected_application.default? ? "#E0FFD9" : "#f1f4f9"
%>

<div class="tr8n_container" <%=tr8n_dir_attribute_tag%> style="background-color:<%=color%>;border-top: solid 1px #ddd;border-right: solid 1px #ddd;border-left: solid 1px #ddd;border-top-left-radius:10px;border-top-right-radius:10px; ">
  <div style="padding:15px;padding-bottom:10px;">
    <div style="float:right">
      <div style="float:right">
        <%= form_tag("/tr8n/app/phrases", :id => "tr8n_key_search_form", :method => :get) do %>
          <%= text_field_tag("search", "", :style => "width:250px;font-size:13px;background: white url(/assets/tr8n/icn_search.png) right no-repeat; padding-right: 20px; border-radius:10px;", :placeholder => trla("Search for phrases")) %>
        <% end %>
      </div>
    </div>
    <div style="font-size:14px; font-weight: bold; padding-bottom:25px; <%=tr8n_style_attribute_tag('text-align', 'left')%>;">

      <div style="display:inline-block; width:80px; text-align: center; float:left; margin-right:10px;">
        <%=image_tag(selected_application.logo_url, :style=>"max-width:80px;max-height:80px; padding:5px;") %>
      </div>

      <ul class="nav nav-pills" style="margin-bottom:-20px;padding-bottom:0px;margin-left:-10px;">
        <li class="dropdown" id="menu1" style="max-width:700px;">

          <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1" style="color:#666; font-size:25px;">
            <%= selected_application.name %>
            <% if selected_application.default? %>
              <%=image_tag("tr8n/lock.png", :style=>"vertical-align:top")%>
            <% end %>
            <b class="caret"></b>
          </a>
          <div style="font-size:14px; font-weight:normal; color: #888; padding-left:13px;">
            <div>
              <%=selected_application.description%>
            </div>
            <% if selected_application.url %>
              <div style="font-size:12px;">
                <%= link_to(selected_application.url, selected_application.url) %>
              </div>
            <% end %>
          </div>
          <ul class="dropdown-menu">
            <% translator_applications.each do |app| %>
              <li>
                <%=link_to({:app_id => app.id}, :style => "#{translator_applications.last != app ? "padding-bottom:10px;border-bottom:1px dashed #ccc" : ""}") do %>
                  <% if app.default? %>
                    <div style="float:right;padding-top:5px;"><%=image_tag("tr8n/lock.png")%></div>
                  <% end %>
                  <div style="display:inline-block; width:70px; text-align: center; padding-top:10px;">
                    <%=image_tag(app.logo_url, :style=>"max-width:50px;max-height:50px;") %>
                  </div>
                  <div style="display:inline-block; vertical-align: top; padding-left:10px;">

                    <div style="font-size:16px; font-weight:bold; padding-top:5px;padding-bottom:5px;">
                      <%= app.name %>
                    </div>
                    <% if app.description %>
                      <div style="font-size:12px; color: #666; max-width:600px; white-space: normal;">
                        <%= app.description %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </li>
            <% end %>
            <li class="divider"></li>
            <li>
              <div style="text-align:center">
                <%=link_to(tra("Create New Application"), {:controller => "/tr8n/app/wizards", :action => :application}, {"class" => "btn", "style" => "width:90%;", "data-toggle" => "dynamic_wizard"})%>
              </div>
            </li>
          </ul>
        </li>
      </ul>

    </div>
  </div>

  <ul class="nav nav-tabs" style="padding-left:10px;padding-right:10px;">
    <% features = []
       features << ["icon-home", "Dashboard", "dashboard", false]
       features << ["icon-th", "Site Map", "sitemap", false]
       features << ["icon-th-list", "Phrases", "phrases", false]
       features << ["icon-globe", "Translations", "translations", false]
       features << ["icon-user", "Translators", "translators", true]
       features << ["icon-certificate", "Awards", "awards", false]                if selected_application.feature_enabled?(:awards)
       features << ["icon-comment", "Forum", "forum", false]                      if selected_application.feature_enabled?(:forum)
       features << ["icon-book", "Glossary", "glossary", false]                   if selected_application.feature_enabled?(:glossary)
       features << ["icon-envelope", "Emails", "emails", false]
       features << ["icon-cog", "Settings", "settings", true]

       features.each do |tab| %>
      <% next if tab.last and not application_admin? %>
      <li class="<%='active' if controller.controller_name == tab[2] %>">
        <%=link_to("/tr8n/app/#{tab[2]}") do %>
          <i class='<%=tab[0]%>'></i>
          <%= tra(tab[1]) %>
        <% end %>
      </li>
    <% end %>
  </ul>

</div>




<script>
  $(function() {
    // Setup drop down menu
    $('.dropdown-toggle').dropdown();
  });
</script>

<style>
  .dropdown-menu {
    min-width: 400px;
  }
  .dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
    color: black;
    background-color: #eee;
    background-image: none;
    filter: none;
  }
</style>