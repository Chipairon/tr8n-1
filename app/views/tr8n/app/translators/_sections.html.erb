<div class="section-header">
  <%=tra("Application Translators") %>
</div>

<ul class="nav nav-tabs" style="padding-left:10px;padding-right:10px;">
  <% [
         [nil, "Translators", ["index"], true],
         [nil, "Invitations", ["invitations"], true],
     ].each do |tab| %>

    <li class="<%='active' if tab[2].include?(controller.action_name)  %>">
      <%=link_to("/tr8n/app/translators/#{tab[2].first}") do %>
        <% if tab[0] %>
          <i class='<%=tab[0]%>'></i>
        <% end %>
        <%= tra(tab[1]) %>
      <% end %>
    </li>
  <% end %>
</ul>
