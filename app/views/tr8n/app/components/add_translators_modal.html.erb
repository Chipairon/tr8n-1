<!-- Modal -->
<div class="modal-dialog" id="languages_modal">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">
        <%=tra("Add Languages To Component")%>
      </h4>
    </div>

    <%= form_tag({:id => @component.id}, {:method => :post, :role => "form", :class => "form-inline", :id => "languages_form", :style=>"margin:0px;"}) do |f| %>
      <div class="modal-body" style="min-height:300px">

        <div class="form-group">
          <p>
            <%=tra("Enter a list of translators you want this component to be translated by.") %>
          </p>

          <%=hidden_field_tag(:translators, "") %>

          <select id="component_translators" data-placeholder="Translators" multiple class="chzn-select" style="width:400px;">
            <option value=""></option>
            <% selected_application.translators.each do |t| %>
              <option value="<%=t.id%>"><%=t.name%></option>
            <% end %>
          </select>

          <p style="padding-top:20px; color:#666">
            <%= tra("Start typing translator's name.") %>
          </p>

        </div>

      </div>
    <% end %>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%=tra("Cancel") %></button>
      <button type="button" class="btn btn-primary" onClick="$('#translators').val($('#component_translators').val()); $('#languages_form').submit();"><%=tra("Submit") %></button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
  (function() {
    $("#component_translators").chosen({});
  })();
</script>