<!-- Modal -->
<div class="modal-dialog">
  <%= form_tag({:id => @translation_key.id}, {:method => :post, :role => "form", :class => "form-inline", :style=>"margin:0px;"}) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <%=tra("Set Fallback Phrase")%>
        </h4>
      </div>

      <div class="modal-body">
        <div class="form-group">
          <label for="component[keyword]"><%=tra("Label")%></label>
          <%=text_area_tag(:fallback_label, "", :placeholder => "Enter fallback phrase label", :class => "form-control input-block-level", :style => "height:140px;") %>
        </div>
        <div class="form-group">
          <label for="shortcut[description]"><%=tra("Description")%> <span style="color:#999; font-size:11px;"><%=tra("optional")%></span></label>
          <%=text_area_tag(:fallback_description, "", :placeholder => "Enter fallback phrase description", :class => "form-control input-block-level", :style => "height:60px;") %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%=tra("Cancel") %></button>
        <button type="submit" class="btn btn-primary"><%=tra("Submit") %></button>
      </div>
    </div><!-- /.modal-content -->
  <% end %>
</div><!-- /.modal-dialog -->
