<div id="comments_module">
	<div class="section_title tr8n_text_align_left">
		<%=tr8n_toggler_tag("comments_content")%>
	  <%=tra("Comments") %>
		<a name="comments">&nbsp;</a>
	</div>

	<div class="section" id="comments_content">
		<div class="tr8n_text_align_left" style="margin-bottom:10px;">
			<% if @comments.any? %>
				<%=tr8n_paginator_tag(@comments, :subject => "comment")%>
			
			  <table style="width:100%; ">
			    <% @comments.each do |comment| %>
			      <% style = (comment == @comments.last ? "" : "border-bottom:1px dotted #ccc;" ) %>  
			      <tr style="<%=style%>">
			        <%= render :partial => "comment", :locals => {:comment => comment} %> 
			      </tr>
			    <% end %>
			  </table>
			<% else %>
        <div class="muted">
			    <%=tra("This phrase has no comments.")%>
        </div>
	    <% end %>		
		</div>
    <% if @language.blank? %>
      <div class="muted" style="font-size: 12px;" >
        <%=tra("A comment can only be submitted for a specific language.")%>
        <%=tra("You are currently viewing all languages.")%>
      </div>
    <% else %>
	    <%= render :partial => "new_comment" %>
    <% end %>
	</div>
</div>
