<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

  <%= render :partial => "/tr8n/app/common/header" %>
  <%=render(:partial => "sections") %>

  <div class="tr8n tr8n_container">
    <div class="section grey">
      <div class="tr8n_float_right" style="padding-right:5px;">
        <%=tr8n_help_icon_tag("Email Templates") %>
      </div>

      <div class="tr8n_text_align_left" style="padding-top:5px;padding-bottom:20px;font-size:12px;">
        <%= tra("This section allows you to manage email templates.") %>
        <%= tra("Templates use [link: Liquid Markup Language].", :link => {:href => "http://liquidmarkup.org/"}) %>
        <%= tra("A template can be nested inside of a layout.") %>
        <%= tra("It also may contain partials.") %>
        <%= tra("To mark any text translatable within a template, partial or layout, use the following syntax: [bold: {syntax}].", :syntax => "{% tr %} TML {% endtr %}") %>
        <%= tra("If you embed liquid inside of TML, the liquid template will be processed first, and the result will be made translatable by Tr8n.") %>
      </div>

      <div class="text-right">
        <%=link_to("Add Email Template", {:action => :email_template_wizard}, {"class" => "btn btn-primary", "data-toggle" => "dynamic_wizard"})%>
      </div>
    </div>

    <%= render :partial=>"list", :locals => {:templates => @emails, :type => "template"} %>

  </div>
  <%= render :partial => "/tr8n/app/common/footer" %>

  <%= stylesheet_link_tag('tr8n/bootstrap/bootstrap-switch.css') %>
  <%=javascript_include_tag('tr8n/vendor/bootstrap/bootstrap-switch.js') %>

<% end %>
