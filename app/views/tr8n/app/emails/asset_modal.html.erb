<div class="modal-dialog">
  <%= form_for(@asset, :as => :asset, :url => {:action => :asset_modal, :id=>@asset.id}, :html => {:method => :post, :role => "form", :class => "form-inline", :style=>"margin:0px;"}) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <%=tra("Asset Details")%>
        </h4>
      </div>

      <div class="modal-body">
        <div class="form-group">
          <label for="to"><%=tra("Keyword")%></label>
          <%=f.text_field(:keyword, :placeholder => "Enter keyword", :class => "form-control input-block-level") %>
        </div>
        <div class="form-group" style="padding:10px;text-align: center; margin-top:10px;">
          <%= image_tag(@asset.url, :style=>"max-width:400px;max-height:400px") %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%=tra("Cancel") %></button>
        <button type="submit" class="btn btn-primary"><%=tra("Save") %></button>
      </div>
    </div>
  <% end %>
</div>
