<td class="tr8n_text_align_left"  style="padding:5px; width:50px;">
  <%=tr8n_user_mugshot_tag(message.translator, :linked => true)%>
</td>
<td class="tr8n_text_align_left" style="padding:5px; width:100px;">
  <%=tr8n_user_tag(message.translator, :linked => true)%>
  <div class="tr8n_text_align_left" style="color:grey;font-size:10px;"><%=tr8n_when_string_tag(message.created_at).html_safe %></div>
  <div class="tr8n_text_align_left" style="font-size:10px;padding-top:5px;">
    <% if tr8n_current_user_is_translator? and message.translator == tr8n_current_translator %>  
      <%=link_to(tra("Delete", "Link to delete forum message"), {:action => :delete_message, :message_id => message.id}, {:confirm => trl("Are you sure you want to delete this message?")})%>
		<% else %>	
      <%=link_to_function(tra("Report", "Link to report an abusive forum message"), "Tr8n.UI.Lightbox.show('/tr8n/dashboard/lb_report?message_id=#{message.id}', {width:600, height:340});")%>
    <% end %>
  </div>
</td>
<td class="tr8n_text_align_left" style="vertical-align: top;">
  <%=message.toHTML %>
</td>
