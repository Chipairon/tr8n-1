<%= tr8n_with_options_tag(:source => 'app/wizards/email-template') do %>
  <div class="wizard" id="new-email-template-wizard">
    <h1><%=tra("Register New Email Template") %></h1>

    <div class="wizard-card" data-cardname="card1">
      <h3><%=tra("Details") %></h3>

      <div class="wizard-input-section">
        <p>
          <%= tra("What language is this email template defined in?") %>
        </p>

        <div class="control-group">
          <select id="new_email_template_language" data-placeholder="Language" style="width:350px;" class="chzn-select">
            <option value=""></option>
            <% Tr8n::Language.enabled_languages.each do |lang| %>
              <option <%="selected" if lang.locale == selected_application.default_language.locale %> value="<%=lang.locale%>"><%=lang.english_name%></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="wizard-input-section">
        <p>
          <%=tra("Enter template keyword:") %>
        </p>

        <div class="control-group">
          <%=text_field_tag(:new_email_template_keyword, "", :placeholder => "For use by the API. It must be unique for the application.", :style=>"width:350px;", "data-validate" => "validateTemplateKeyword" ) %>
        </div>
      </div>

    </div>

    <div class="wizard-card" data-cardname="card2">
      <h3><%=tra("Description") %></h3>

      <div class="wizard-input-section">
        <p>
          <%=tra("Enter template name:") %>
        </p>

        <div class="control-group">
          <%=text_field_tag(:new_email_template_name, "", :placeholder => "Enter email template name", :style=>"width:350px;" ) %>
        </div>
      </div>

      <div class="wizard-input-section">
        <p>
          <%=tra("Template description:") %>
        </p>

        <div class="control-group">
          <%=text_area_tag(:new_email_template_description, "", :placeholder => "Enter email template description", :style=>"width:350px;height:120px;") %>
        </div>
      </div>

    </div>

    <div class="wizard-card" data-cardname="card3">
      <h3><%=tra("Subject") %></h3>

      <div class="wizard-input-section">
        <div class="control-group">
          <%=text_area_tag(:new_email_template_subject, "", :placeholder => "Email subject", :style=>"width:400px;height:250px;") %>
        </div>
      </div>
    </div>

    <div class="wizard-card" data-cardname="card4">
      <h3><%=tra("Body") %></h3>

      <div class="wizard-input-section">
        <div class="control-group">
          <%=text_area_tag(:new_email_template_body, "", :placeholder => "Email body", :style=>"width:400px;height:250px;") %>
        </div>
      </div>
    </div>

    <div class="wizard-error">
      <div class="alert alert-error create-email-template-error-message">
      </div>
    </div>

    <div class="wizard-failure">
      <div class="alert alert-error create-email-template-failure-message">
      </div>
    </div>

    <div class="wizard-success">
      <div class="alert alert-success create-email-template-success-message">
      </div>
    </div>

  </div>

  <script>
    function validateTemplateKeyword(el) {
      var val = el.val();
      ret = {
        status: true
      };
      if (val == "") {
        ret.status = false;
        ret.msg = "<%=tra("Keyword must be provided") %>";
      }
      return ret;
    }

    (function() {
      var wizard = $("#new-email-template-wizard").wizard({});

      $("#new_email_template_language").chosen({});

      wizard.on("reset", function(wizard) {
        location.reload();
      });

      wizard.on("submit", function(wizard) {
        var jqxhr = $.post("/tr8n/app/wizards/email_template", {
          "keyword":        $("#new_email_template_keyword").val(),
          "default_locale": $("#new_email_template_language").val(),
          "name":           $("#new_email_template_name").val(),
          "description":    $("#new_email_template_description").val(),
          "subject":        $("#new_email_template_subject").val(),
          "body":           $("#new_email_template_body").val()
        }).done(function(params) {
          if (params["error"]) {
            $(".create-email-template-error-message").html(params['error']);
            wizard.trigger("failure");
            wizard.hideButtons();
            wizard.showSubmitCard("failure");
            return;
          }
          $(".create-email-template-success-message").html(params['msg']);
          wizard.trigger("success");
          wizard.hideButtons();
          wizard.showSubmitCard("success");

          window.setTimeout(function() {
            location.reload();
          }, 500);
        }).fail(function() {
          $(".create-email-template-failure-message").html("Failed to submit the wizard. Please try again later.");
          wizard.trigger("failure");
          wizard.hideButtons();
          wizard.showSubmitCard("failure");
        });

      });

      wizard.show();
    })();
  </script>
<% end %>